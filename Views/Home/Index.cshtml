@{
    ViewData["Title"] = "File Downloader";
}

<h1>File Downloader</h1>

<p>Click the button below to download a file from a third-party API.</p>

<form method="get" action="/Home/DownloadFile">
    <button type="submit" class="btn btn-primary">Download File</button>
</form>

@if (ViewBag.Error != null)
{
<div class="alert alert-danger">    
    @ViewBag.Error
</div>
}
